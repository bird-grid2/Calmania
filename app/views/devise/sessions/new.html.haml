.user_wrapper
  %header
    %h2 ログイン画面
    = image_tag 'b_ornament_146_0S.png'
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :nickname, value: "ニックネーム", class: 'log-in'
      = f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", required: true
    .field
      = f.label :email, value: "メールアドレス", class: 'log-in'
      = f.email_field :email, placeholder: "メールアドレス", required: true
    .field
      = f.label :password, value: "パスワード", class: 'log-in'
      = f.password_field :password, placeholder: "パスワード入力", required: true
    - if devise_mapping.rememberable?
      .check_field
        = f.check_box :remember_me
        = f.label :remember_me, value: "ログイン情報を記憶する"
    .actions
      = f.submit "ログイン", id: 'login'
  .bottom_field
    = render "devise/shared/links"
