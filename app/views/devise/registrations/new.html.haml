.user_wrapper
  = form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f|
    = render "devise/shared/error_messages", resource: resource
    %header
      %h2 新規作成
      = image_tag 'b_ornament_146_0S.png'
    
      .left_box
        .field
          = f.label :nickname, class: 'new', value: 'ニックネーム (必須)'
          = f.text_field :nickname, autofocus: true, placeholder: "ニックネームを入力してください", required: true
        .field
          = f.label :email, class: 'new', value: 'メールアドレス (必須)'
          = f.email_field :email, placeholder: "メールアドレスを入力してください", required: true
        .field
          = f.label :height, class: 'new', value: '身長[cm] (任意)'
          = f.number_field :height, placeholder: "身長を入力してください", step: '0.1'
      .border-line
      .right_box 
        .field
          .field-box
            = f.label :password, class: 'password', value: 'パスワード', required: true
            - if @minimum_password_length
              %em
                (#{@minimum_password_length}字以上入力)
          = f.password_field :password, placeholder: "パスワード入力"
        .field
          = f.label :password_confirmation, class: 'label', value: '確認入力'
          = f.password_field :password_confirmation, placeholder: "パスワード入力(確認)", required: true
        .actions
          = f.submit "新規作成"
          = link_to "戻る", root_path, class: 'new_btn'
