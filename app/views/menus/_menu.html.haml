.wrapper
  .food_wrapper
    = form_with model: menu, local: true do |form|
      .upper_menu_content
        %p MenuName : 
        = form.text_field :material, class: 'menu_name'

      .input_form
        .input_form__column
          .input_form__column__label
            =icon('fas', 'plus-circle', class: 'icon', id: 'menu-plus')
          .input_form__column__input_name_0#name
            = form.collection_select :names, @foods, :id, :element, {prompt: '選択してください'}, {name: 'menu[names][]'}
          .input_form__column__box_0#fbox
          
      .calculate_box
        .calculate_box__title
          %h2 タンパク質 合計
          %h2 脂質 合計
          %h2 炭水化物 合計
          %h2 総カロリー
        .calculate_box__result
          .calculate_box__result--protain
            %p --- kCal
          .calculate_box__result--fat
            %p --- kCal
          .calculate_box__result--carbohydrate
            %p --- kCal
          .calculate_box__result--total
            %p --- kCal
          .calculate_box__result--form

      .bottom_menu_content
        = form.submit "メニュー作成", class: "btn"
        = link_to "キャンセル", menus_path, class: "btn"