.wrapper
  = form_with model: @menu, local: true do |form|
    .upper_content
      .menu_name
        = form.text_field :menu

    .input_form
      .input_form__column
        .input_form__column__input_name
          = form.collection_select :name, @foods, :id, :food, prompt: '選択してください'
        .input_form__column__box

    .bottom_content
      = form.submit 'Menu Create', class: "btn"
      = link_to "Cancel", menus_path, class: "btn"