.wrapper
  .side-management
    = link_to graphs_path do
      = icon('far', 'chart-bar')
      %p.pop1 グラフ描画
    %span<>
    = link_to logs_path do
      = icon('fas', 'file-alt')
      %p.pop2 ログ記録
    %span<>
    = link_to edit_user_registration_path do
      = icon('fas', 'edit')
      %p.pop3 ログイン情報編集
    %span<>
    = link_to destroy_user_session_path, method: :delete do
      = icon('fas', 'sign-out-alt')
      %p.pop4 ログアウト
  .main_wrapper
    .top-managements
      .top-managements__left-contents
        .top-managements__left-contents--title
          %h1 BMI
        .top-managements__right-contents--value
          <h3>#{@body_mass_index.present? ? @body_mass_index : '---'}</h3>
        .top-managements__left-contents--title
          %h1 適正体重
        .top-managements__right-contents--value
          <h3>#{@weight.present? ? @weight : '---'}</h3><p>[kg]</p>
      .top-managements__right-contents
        .top-managements__right-contents-title
          %h1 体重
        .top-managements__right-contents--value
          <h3>#{@today_weight.present? ? @today_weight : '---'}</h3><p>[kg]</p>
        .top-managements__right-contents-title
          %h1 体脂肪率
        .top-managements__right-contents--value
          <h3>#{@today_bfp.present? ? @today_bfp : '---'}</h3><p>[%]</p>
    .middle-managements
      .middle-managements__left-contents
        .middle-managements__left-contents--main-title
          .main-title
            %h2 本日の摂取カロリー
          .total-value
            <h3>#{@today_cal}</h3><p>[kCal]</p>
        .middle-managements__left-contents--title
          .titles
            %h4 たんぱく質の摂取量(本日)
          .value
            <h6>#{@today_protain}</h6><p>[kCal]</p>
        .middle-managements__left-contents--title
          .titles
            %h4 脂質の摂取量(本日)
          .value
            <h6>#{@today_fat}</h6><p>[kCal]</p>
        .middle-managements__left-contents--title
          .titles
            %h4 炭水化物の摂取量(本日)
          .value
            <h6>#{@today_carb}</h6><p>[kCal]</p>
      .middle-managements__right-contents
        .upper-info
          %table
            %tr
              %th.table-title 記録日
              %th.table-title 体重 [kg]
              %th.table-title 体脂肪率 [%]
              %th.table-title 総カロリー [kCal]
              %th.table-title コメント
            - @detail.each do |cal|
              %tr
                %td.table-item
                  = cal.date
                %td.table-item
                  = cal.weight
                %td.table-item
                  = cal.bfp
                %td.table-item
                  = cal.total_cal
                %td.table-item
                  = cal.description
  